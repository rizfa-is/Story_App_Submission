<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/ivPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_skeleton"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintBottom_toTopOf="@+id/viewDiv"
            app:layout_constraintEnd_toEndOf="@+id/ivPhoto"
            app:layout_constraintStart_toStartOf="@+id/ivPhoto"
            app:layout_constraintTop_toBottomOf="@+id/ivPhoto" />

        <View
            android:id="@+id/tvDesc1"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            app:layout_constraintTop_toTopOf="@+id/ivPhoto"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/tvDesc2"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/tvDesc3"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc2"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/tvDesc4"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintStart_toEndOf="@+id/ivPhoto"
            app:layout_constraintTop_toBottomOf="@+id/tvDesc3"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/tvTime"
            android:layout_width="80dp"
            android:layout_height="7dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvName" />

        <View
            android:id="@+id/viewDiv"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/bg_skeleton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>